@model Final_Cordero_Raura.Models.Resena

@{
    ViewData["Title"] = "Edit";
}
<!--Para que funcione debemos llamar al script del ckeditor-->
<script src="~/lib/ckeditor/ckeditor.js"></script>

<h1>Edit</h1>

<h4>Resena</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdResena" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Texto" class="control-label"></label>
                    <textarea asp-for="Texto" class="ckeditor"></textarea>
                    @*<textarea class="ckeditor" name="contenido"></textarea>*@
                </div>
            </div>
            @*Esto solo lo comento para probar que sucede si quito el IdPelicula y le dejo solo con Nombre
            <div class="form-group">
            <label asp-for="IdPelicula" class="control-label"></label>
            <input asp-for="IdPelicula" class="form-control" />
            <span asp-validation-for="IdPelicula" class="text-danger"></span>
            </div>
            *@
            @*Aqui agrego una espacio mas donde pruebo si es que sirve que me muestre el nombre de la pelicula en lugar del IdPelicula*@
            <div class="form-group">
                <label asp-for="IdPelicula" class="control-label"></label>
                <select asp-for="IdPelicula" class="form-control" asp-items="@ViewBag.Peliculas"></select>
                <span asp-validation-for="IdPelicula" class="text-danger"></span>
            </div>
            @*/////////////////////////////////////////////*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('.ckeditor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}
